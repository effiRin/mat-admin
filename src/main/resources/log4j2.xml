<?xml version="1.0" encoding="UTF-8"?>

<configuration status="INFO">

    <Appenders>
        <!-- 콜솔 -->
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout charset="UTF-8" pattern="%d{hh:mm:ss} %5p [%c] %m%n"/>
        </Console>
    </Appenders>

    <loggers>
        <logger name="com.springframework" level="INFO" additivity="false">
            <appender-ref ref="console" />
        </logger>

        <logger name="org.springframework.web" level="INFO" additivity="false">
            <appender-ref ref="console" />
        </logger>

        <logger name="org.springframework.security" level="TRACE" additivity="false">
            <appender-ref ref="console" />
        </logger>

        <logger name="com.matjo" level="INFO" additivity="false">
            <appender-ref ref="console" />
        </logger>
        <logger name="com.matjo.pickafood.admin" level="DEBUG" additivity="false">
            <appender-ref ref="console" />
        </logger>

        <logger name="com.matjo.pickafood.admin.notice" level="TRACE" additivity="false">
            <appender-ref ref="console" />
        </logger>

        <logger name="com.matjo.pickafood.admin.inquiry" level="TRACE" additivity="false">
            <appender-ref ref="console" />
        </logger>

        <logger name="com.matjo.pickafood.admin.board" level="TRACE" additivity="false">
            <appender-ref ref="console" />
        </logger>

        <logger name="com.matjo.pickafood.admin.meal" level="INFO" additivity="false">
            <appender-ref ref="console" />
        </logger>

        <root level="INFO" additivity="false">
            <AppenderRef ref="console"/>
        </root>

    </loggers>

</configuration>