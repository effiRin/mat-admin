<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.matjo.pickafood.admin.board.mapper.BoardMapper">

    <sql id="search">
        <where>
            <if test="keyword != null">
                <foreach collection="types" item="item" separator=" OR " open="(" close=")">
                    <if test='item == "t"'>
                        title like concat('%', #{keyword}, '%')
                    </if>
                    <if test='item == "c"'>
                        content like concat('%', #{keyword}, '%')
                    </if>
                    <if test='item == "w"'>
                        writer like concat('%', #{keyword}, '%')
                    </if>
                </foreach>
            </if>
        </where>
    </sql>

    <select id = "selectList" resultType="com.matjo.pickafood.admin.board.vo.BoardVO">
        select board_seq, boardCategory, mainImage, title, content, id, nickName, regdate, updatedate, replyCount, delFlag, likeCount, viewsCount
        from board
        <include refid="search"></include>
        order by board_seq desc
        limit #{skip}, #{size}
    </select>

    <select id = "selectOne" resultType="com.matjo.pickafood.admin.board.vo.BoardVO">
        select * from board where board_seq = #{board_seq}
    </select>

    <select id="getBoardTotal" resultType="int">
        select count(board_seq) from board
        <include refid="search"></include>
    </select>

    <insert id="insert">
        <selectKey resultType="int" keyProperty="board_seq" order="AFTER">
            select last_insert_id()
        </selectKey>
        insert into board(title, content, id, nickName, mainImage)
        values (#{title}, #{content},#{id}, #{nickName}, #{mainImage})
    </insert>

    <update id = "delete">
        update board set delFlag = 1 where board_seq = #{board_seq}
    </update>

<!-- 아마도 변경 가능성 있음  -->

    <update id="update">
        update board set title = #{title}, content= #{content}, updateDate = now() where board_seq = #{board_seq}
    </update>

    <update id="updateReplyCount">
        update board set replyCount = replyCount + #{amount} where board_seq = #{board_seq}
    </update>

    <select id="selectFiles" resultType="com.matjo.pickafood.admin.board.vo.BoardVO">
        select * from tbl_attach where bno = #{bno}
    </select>

</mapper>